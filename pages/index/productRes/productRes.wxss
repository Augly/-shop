/* pages/index/productRes/productRes.wxss */
@import "../index/index.wxss";

.product_res {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 47rpx 0rpx 55rpx;
  background-color: rgba(255, 255, 255, 1);
}

.price_group {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid rgba(243, 244, 247, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price_title {
  font-size: 40rpx;
  font-family: Helvetica;
  font-weight: 400;
  color: rgba(69, 208, 174, 1);
}

.price_number {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.dec {
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
}

.dec_res {
  width: 550rpx;
}

.title {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
}

.mintitle {
  font-size: 26rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(136, 136, 136, 1);
  margin-top: 14rpx;
}

.iconfenxiang {
  font-size: 75rpx;
  color: rgba(69, 208, 174, 1);
}

.select_gg {
  width: 750rpx;
  height: 78rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 1rpx 1rpx 5rpx 0rpx rgba(0, 0, 0, 0.15);
  /* border-radius:10rpx; */
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 0rpx 55rpx;
}

.select_title {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.iconjiantou {
  font-size: 24rpx;
  color: rgba(69, 208, 174, 1);
  line-height: 50rpx;
}

