/* pages/index/productRes/productRes.wxss */
@import "../index/index.wxss";

page {
  padding-bottom: 100rpx !important;
}

.product_res {
  width: 100%;
  height: auto;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0rpx 47rpx 0rpx 55rpx;
  background-color: rgba(255, 255, 255, 1);
}

.price_group {
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid rgba(243, 244, 247, 1);
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.price_title {
  font-size: 40rpx;
  font-family: Helvetica;
  font-weight: 400;
  color: rgba(69, 208, 174, 1);
}

.price_number {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.dec {
  width: 100%;
  height: auto;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 20rpx 0rpx;
}

.dec_res {
  width: 550rpx;
}

.title {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
}

.mintitle {
  font-size: 26rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(136, 136, 136, 1);
  margin-top: 14rpx;
}

.iconfenxiang {
  font-size: 75rpx;
  color: rgba(69, 208, 174, 1);
}

.select_gg {
  width: 750rpx;
  height: 78rpx;
  background: rgba(255, 255, 255, 1);
  -webkit-box-shadow: 1rpx 1rpx 5rpx 0rpx rgba(0, 0, 0, 0.15);
  box-shadow: 1rpx 1rpx 5rpx 0rpx rgba(0, 0, 0, 0.15);
  /* border-radius:10rpx; */
  margin-top: 18rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  padding: 0rpx 55rpx;
}

.select_title {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
}

.iconjiantou {
  font-size: 24rpx;
  color: rgba(69, 208, 174, 1);
  line-height: 50rpx;
}

.bottom_group {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.bottom_more {
  width: 263rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.more_item {
  position: relative;
  display: flex;
  width: 50%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.brid {
  position: absolute;
  top: 0;
  left: 60rpx;
  display: inline-block;
  height: 18rpx;
  background: rgba(69, 208, 174, 1);
  border-radius: 9rpx;
  padding: 0rpx 5rpx;
  font-size: 16rpx;
  font-family: Helvetica;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.iconliaotian,
.icongouwuche {
  font-size: 35rpx;

}

.more_title {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(53, 53, 53, 1);
}

.bottom_cart {
  width: 244rpx;
  height: 100%;
  background: rgba(53, 53, 53, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.bottom_buy {
  width: 244rpx;
  height: 100%;
  background: rgba(69, 208, 174, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}