.personl_group {
  width: 100%;
  height: 308rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(69, 208, 174, 1);
}

.personl_avater {
  width: 109rpx;
  height: 109rpx;
  border: 3rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
}

.p_name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 22rpx;
}

.p_tap {
  width: 111rpx;
  height: 32rpx;
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 18rpx;
}

.grid_wrap {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 0rpx 24rpx 24rpx 24rpx;
  overflow: hidden;
}

.grid_item {
  width: 218rpx;
  height: 218rpx;
  background: rgba(255, 255, 255, 1);
  float: left;
  margin-top: 20rpx;
  margin-right: 24rpx;
}
.grid_item:nth-child(3n){
  margin-right: 0;
}

.other_wrap{
  clear: both;
  width: 100%;
  height: auto;
  background-color: rgba(255, 255, 255, 1);
  margin-bottom: 16rpx;
}
.other_title{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  font-size:36rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(63,63,63,1);
}

.iconjiantou{
  color: rgba(136, 136, 136, 1);
  font-size: 25rpx; 
}

.scroll_wrap{
  /* width: 100%; */
  height: 375rpx;
  white-space: nowrap; display: flex
}
.scroll_item{
  width: 235rpx;
  box-sizing: border-box;
  padding: 16rpx 0rpx;
  /* background: red; */
  margin-left: 25rpx;
  display: inline-block;
}
.scroll_item:last-child{
  margin-right: 25rpx;
}
.item_img{
  width: 235rpx;
  height: 235rpx;
  background: red;
  border-radius:10rpx;
}
.title{
  font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(63,63,63,1);
margin-top: 8rpx;
}
.price_group{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.price{
  font-size:28rpx;
font-family:Helvetica;
font-weight:400;
color:rgba(69,208,174,1);
}
.tap{
  width:49rpx;
height:22rpx;
background:rgba(69,208,174,1);
border-radius:5rpx;
display: flex;
align-items: center;
justify-content: center;
font-size:18rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
}