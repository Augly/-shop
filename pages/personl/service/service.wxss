page {
  box-sizing: border-box;
  padding: 24rpx;
}
.title {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #353535;
}
.tab_group {
  width: 100%;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab_group .tab_item {
  width: 150rpx;
  height: 50rpx;
  border: 1rpx solid #353535;
  border-radius: 25rpx;
  margin-right: 24rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #353535;
  text-align: center;
  line-height: 50rpx;
}
.tab_group .tab_item_active {
  border: 1rpx solid #45d0ae;
  color: #ffffff;
  background-color: #45d0ae;
}
.content {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 24rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  margin-top: 42rpx;
}
.content .tap_wrap {
  width: 100%;
  height: auto;
  margin-bottom: 60rpx;
}
.content .tap_wrap .tab_title {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 40rpx;
  color: #353535;
}
.content .tap_wrap .tab_item {
  width: 100%;
  height: auto;
  font-size: 18rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 0.8);
  line-height: 35rpx;
}
.content .tab_list {
  width: 100%;
  height: 75rpx;
  border-bottom: 1rpx solid #f3f4f7;
  display: flex;
  align-items: center;
}
.content .tab_list .tab_list_title {
  width: 160rpx;
  height: 100%;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #353535;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.content .tab_list .tab_list_select {
  width: 500rpx;
  height: 100%;
  font-size: 26rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: #353535;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .tab_list .tab_list_select .iconjiantou9 {
  font-size: 26rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: #353535;
}
.content .tab_up_img {
  width: 100%;
  height: auto;
}
.content .tab_up_img .img_wrap {
  width: 100%;
  height: 100%;
}
.content .tab_up_title {
  width: 100%;
  height: 70rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #353535;
  line-height: 70rpx;
}
.content .up_img {
  width: 154rpx;
  height: 154rpx;
  background: rgba(178, 178, 178, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .up_img .icontianjia {
  font-size: 20rpx;
  color: #353535;
}
.sure_button {
  width: 638rpx;
  height: 79rpx;
  background: #45d0ae;
  border-radius: 10rpx;
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 33rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
